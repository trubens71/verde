{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Input data mapping to Domain Model for Adult Social Care in England",
  "description": "Used to validate a mapping from input data to the domain model.",
  "definitions": {
    "source_meta": {
      "type": "object",
      "properties": {
        "publisher": { "type": "string" },
        "publication": { "type": "string" },
        "strength": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "column_name": { "type": "string" },
      "source_meta": { "$ref": "#/definitions/source_meta" },
      "domain_map": {
        "type": "array",
        "items": {
          "$ref": "https://smcse.city.ac.uk/student/aczd178/verde/schema/asc_domain_schema_v2.json"
        }
      },
      "value_map": {
        "type": "array",
        "items": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "required": ["column_name", "domain_map"]
  }
}
